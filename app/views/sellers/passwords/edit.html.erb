<div class="logout-wrap">
  <div class="logout-form-wrap">
    <h2 class="formtitle">Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "New password", required: true, autofocus: true, required: false %>
        <%= f.input :password_confirmation, label: "Confirm your new password", required: true, required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>
    <div class="devise_links">
      <%= render "sellers/shared/links" %>
    </div>
  </div>
</div>
