<!DOCTYPE html>
<html>
	<head>
		<title>Speedlancer</title>
		<link rel="shortcut icon" type="image/x-icon" href="/assets/favicon.ico">
		<link href="//fonts.googleapis.com/css?family=Roboto:400,300,700|Roboto+Condensed:400,300,700" rel="stylesheet" type="text/css">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% flash.each do |name , msg| %>
	    <div class="<%= name %>">
	      <%= msg %>
	    </div>
	  <% end %>
		<header class="header">
			<%= render 'layouts/header' %>
		</header>
		<div class="maincontent">
			<%= yield %>
		</div>
		<footer class="footer <%= 'loggedin' if side_bar_present? %>">
			<%= render "layouts/footer" %>
		</footer>
	</body>
</html>
